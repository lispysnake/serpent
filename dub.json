{
	"authors": [
		"Lispy Snake, Ltd."
	],
	"configurations": [
		{
			"excludedSourceFiles": [
				"source/app.d",
				"source/game/*.d",
			],
			"name": "library",
			"targetType": "library"
		},
		{
			"name": "demo",
			"targetType": "executable"
		}
	],
	"copyright": "Copyright Â© 2019-2020 Lispy Snake, Ltd.",
	"dependencies": {
		"bindbc-bgfx": {
			"path": "external/bindbc-bgfx",
		},
		"bindbc-loader": {
			"path": "external/bindbc-loader",
		},
		"bindbc-sdl": {
			"path": "external/bindbc-sdl",
		},
		"intel-intrinsics": {
			"path": "external/intel-intrinsics",
		},
		"gfm": {
			"path": "external/gfm",
		}
	},
	"description": "Serpent Game Framework",
	"libs-posix": [
		"SDL2", "SDL2_image",
		"bgfxRelease-shared",
		"stdc++", "GL", "x11",
	],
	"libs-windows": [
		"SDL2", "SDL2_image",
		"bgfxRelease-shared",
	],
	"lflags": ["-L../serpent-support/runtime/lib"],
	"license": "ZLib",
	"name": "serpent",
	"subConfigurations": {
		"bindbc-bgfx": "staticBC",
		"bindbc-sdl": "staticBC"
	},
	"targetType": "none",
	"versions": [
		"BindSDL_Static",
		"BindSDL_Image",
		"SDL_205",
	],
	"buildTypes": {
		"debug": {
			"buildOptions": ["debugMode", "optimize"],
			"dflags-dmd": ["-g", "-fPIC"],
			"dflags-ldc": ["-gc", "-O2", "--relocation-model=pic"]
		},
		"release": {
			"buildOptions": ["releaseMode", "optimize", "inline"],
			"dflags-ldc": ["-flto=thin", "--relocation-model=pic"]
		}
	},
	"preBuildCommands": ["ldc2 --run scripts/prepare-shaders.d"],
	"stringImportPaths": ["built/shaders"],
}
